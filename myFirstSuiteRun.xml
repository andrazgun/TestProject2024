<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Course 8">
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="MyFirstTestNGTest"/>
        </classes>
    </test>

    <test name="Regression Tests">
        <groups>
            <run>
                <include name="Regression"/>
            </run>
        </groups>
        <classes>
            <class name="MyFirstTestNGTest"/>
        </classes>
    </test>

    <test name="ClassActivity">
        <groups>
            <run>
                <include name="print"/>
            </run>
        </groups>
        <classes>
            <class name="ClassActivityTestNGTest"/>
        </classes>
    </test>
</suite>
